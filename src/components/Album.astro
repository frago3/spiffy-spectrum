---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

import Player from "./player2/Player.svelte";
import Playlist from "./player2/Playlist.svelte";

type Props = {
    album: CollectionEntry<"albums">;
};

const { album } = Astro.props;
console.log(album.data.tracklist)
---

<section class="px-4 py-8 md:py-28 md:px-8">
    <h1 class="text-2xl font-bold mb-1 hidden md:block">{album.data.name}</h1>
    <div class="flex gap-x-14 flex-col md:flex-row">

        <div class="md:w-2/5 md:mt-2.5">
            <Image src={album.data.cover} alt={album.id}/>
            <Player tracklist={album.data.tracklist} albumName={album.data.name} client:load/>
        </div>
        <div class="md:w-3/5">
            <Playlist client:load/>
        </div>
    </div>
</section>