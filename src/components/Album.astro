---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { url } from "../utils/all";
type Props = {
    album: CollectionEntry<"albums">;
};

const { album } = Astro.props;
---

<!-- <a class="flex flex-wrap gap-x-4 active:scale-95" href={url(album.id)}> -->
<section class="flex flex-wrap gap-x-6">
    <a href={url(album.id)}>
        <Image src={album.data.cover} alt={album.id} class="active:scale-95"/>
    </a>
    <p class="mt-3 text-lg font-bold">{album.data.name}</p>
</section>
