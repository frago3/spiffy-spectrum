---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

import Player from "./player2/Player.svelte";
import Playlist from "./player2/Playlist.svelte";

type Props = {
    album: CollectionEntry<"albums">;
};

const { album } = Astro.props;
---

<section class="px-5 pb-10 md:py-20 md:px-8">
    <h1 class="mb-2 text-2xl font-bold hidden md:block">{album.data.name}</h1>
    <div class="flex gap-x-12 flex-col md:flex-row">

        <div class="md:w-5/12 md:mt-2.5">
            <Image src={album.data.cover} alt={album.id}/>
            <Player tracklist={album.data.tracklist} albumName={album.data.name} client:load/>
        </div>
        <div class="md:w-7/12">
            <Playlist client:load/>
        </div>
    </div>
</section>